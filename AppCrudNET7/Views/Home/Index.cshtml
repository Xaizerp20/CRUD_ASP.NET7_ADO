@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">
    <div class="col-10">


        <div class="alert alert-info" role="alert">
            CRUD Employees
        </div>
        <button type="button" class="btn btn-success btn-sm btn-new-employee">New Employee</button>


        <table class="table table-striped" id="tableEmployees">
            <thead>

                <tr>
                    <th>Full Name</th>
                    <th>Department</th>
                    <th>Salary</th>
                    <th>Date Contract</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>

        </table>

    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalEmployee" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal Employee</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="txtFullName" autocomplete="off">
                </div>

                <div class="form-group">
                    <label class="form-label">Department</label>
                    <select class="form-select" id="cboDepartment"></select>
                </div>

                <div class="form-group">
                    <label class="form-label">Salary</label>
                    <input type="text" class="form-control" id="txtSalary">
                </div>

                <div class="form-group">
                    <label class="form-label" >Date Contract</label>
                    <input type="text" class="form-control" id="txtDateContract">
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-save-changes">Save</button>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/js/index.js"></script>
}